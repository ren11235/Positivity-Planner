{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "importHelpers": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    //"paths": {
      //"angular-calendar": ["./projects/angular-calendar/src"],
      //"angular-calendar/date-adapters/date-fns": [
